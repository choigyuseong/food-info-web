<% title = '홈' %>

<div class="main">
    <h2 class="section-title">추천 레시피</h2>
    <% if (!recipes.length) { %>
        <p>등록된 레시피가 없습니다.</p>
    <% } else { %>
        <div class="grid">
            <% recipes.forEach(recipe => { %>
                <%- include('partials/card', { recipe }) %>
            <% }) %>
        </div>

        <nav class="pagination">
            <% if (hasPrevBlock) { %>
                <a href="?page=<%= startPage - 1 %>">‹‹</a>
            <% } else { %>
                <a class="disabled">‹‹</a>
            <% } %>

            <% for (let p = startPage; p <= endPage; p++) { %>
                <a
                        href="?page=<%= p %>"
                        class="<%= p === page ? 'active' : '' %>"
                ><%= p %></a>
            <% } %>

            <% if (hasNextBlock) { %>
                <a href="?page=<%= endPage + 1 %>">››</a>
            <% } else { %>
                <a class="disabled">››</a>
            <% } %>
        </nav>

    <% } %>
</div>
