<%- include('partials/header') %>

<main>
    <h2>추천 레시피</h2>
    <% if (recipes.length === 0) { %>
        <p>등록된 레시피가 없습니다.</p>
    <% } else { %>
        <div class="grid">
            <% recipes.forEach(r => { %>
                <div class="card">
                    <a href="/recipes/<%= r.id %>">
                        <img src="<%= r.image_url %>" alt="<%= r.title %>">
                        <h3><%= r.title %></h3>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } %>
</main>

<%- include('partials/footer') %>
