<% title = '홈' %>

<div class="main">
    <h2>추천 레시피</h2>

    <% if (!recipes.length) { %>
        <p>등록된 레시피가 없습니다.</p>
    <% } else { %>
        <div class="grid">
            <% recipes.forEach(recipe => { %>
                <%- include('partials/card', { recipe }) %>
            <% }) %>
        </div>

        <nav class="pagination">
            <% for (let p = 1; p <= totalPages; p++) { %>
                <a href="?page=<%= p %>" class="<%= p === page ? 'active' : '' %>"><%= p %></a>
            <% } %>
        </nav>
    <% } %>
</div>
