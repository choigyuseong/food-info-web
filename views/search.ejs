<% title = `"${query}" 검색 결과` %>

<div class="main">
    <h2>“<%= query %>” 검색 결과</h2>
    <% if (!recipes.length) { %>
        <p>‘<%= query %>’에 해당하는 레시피가 없습니다.</p>
    <% } else { %>
        <div class="grid">
            <% recipes.forEach(recipe => { %>
                <%- include('partials/card', { recipe }) %>
            <% }) %>
        </div>
    <% } %>
</div>