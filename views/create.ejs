<%- include('partials/header') %>

<main>
    <h2>레시피 등록</h2>
    <form action="/recipes/create" method="POST">
        <label for="title">레시피 이름</label>
        <input type="text" id="title" name="title" required />

        <label for="image_url">이미지 URL</label>
        <input type="text" id="image_url" name="image_url" />

        <label for="ingredients">재료</label>
        <textarea id="ingredients" name="ingredients" required
                  placeholder="예) 햇반 1개, 토마토 2개, 달걀 1/2개…"></textarea>

        <label for="instructions">조리 방법</label>
        <textarea id="instructions" name="instructions" required
                  placeholder="예) 1. 토마토를 씻고…&#10;2. 팬에 식용유를…"></textarea>

        <button type="submit" class="button">등록하기</button>
    </form>
</main>

<%- include('partials/footer') %>
