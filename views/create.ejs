<% title = '레시피 등록' %>

<div class="main form">
    <h2>레시피 등록</h2>
    <label class="form__label" for="title">레시피 이름</label>
    <input class="form__input" type="text" id="title" name="title" required />

    <label class="form__label" for="image_url">이미지 URL</label>
    <input class="form__input" type="text" id="image_url" name="image_url" />

    <label class="form__label" for="ingredients">재료</label>
    <textarea class="form__textarea" id="ingredients" name="ingredients" required></textarea>

    <label class="form__label" for="instructions">조리 방법</label>
    <textarea class="form__textarea" id="instructions" name="instructions" required></textarea>

    <button type="submit" class="button button--primary">등록하기</button>
</div>
