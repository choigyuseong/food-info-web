<% title = '로그인' %>

<div class="main">
    <div class="auth-page">
        <h2 class="section-title">로그인</h2>

        <!-- 에러 메시지 -->
        <% if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <form class="form" action="/login" method="POST">
            <div class="form__group">
                <label class="form__label" for="username">아이디</label>
                <input class="form__control" id="username" name="username" required />
            </div>
            <div class="form__group">
                <label class="form__label" for="password">비밀번호</label>
                <input class="form__control" type="password" id="password" name="password" required />
            </div>
            <div class="form__group">
                <button type="submit" class="button button--primary">로그인</button>
            </div>
        </form>
    </div>
</div>
